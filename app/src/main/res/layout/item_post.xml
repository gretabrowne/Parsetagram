<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="183dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@id/ivProfile"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:textColor="@color/navy"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvCaption0"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/flBar"
        android:paddingLeft="10dp"
        android:text="caption"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/flBar"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ivPost"
        android:backgroundTint="@android:color/white">

        <ImageButton
            android:id="@+id/ibLike"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/heart_selector" />

        <ImageButton
            android:id="@+id/ibComment"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/ibLike"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/ufi_comment" />

        <ImageButton
            android:id="@+id/ibDirect"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/ibComment"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/ufi_new_direct" />

        <ImageButton
            android:id="@+id/ibSave"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="215dp"
            android:layout_marginStart="228dp"
            android:layout_toEndOf="@id/ibDirect"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/ufi_save_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/tvUsername" />

    <TextView
        android:id="@+id/tvDateCreated"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvCaption0"
        android:layout_marginLeft="10dp"
        android:text="TextView" />

</RelativeLayout>
