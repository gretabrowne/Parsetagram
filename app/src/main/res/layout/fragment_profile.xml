<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/cyan_500"
        android:onClick="onClick"
        android:text="Log Out"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnProPic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProPic"
        android:layout_toEndOf="@+id/ivProPic"
        android:backgroundTint="@color/cyan_500"
        android:text="Add Pro Pic"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivProPic"
        android:layout_width="106dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:src="@color/light_grey" />

    <TextView
        android:id="@+id/tvUsernameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnProPic"
        android:layout_below="@+id/button"
        android:text="TextView" />


</RelativeLayout>